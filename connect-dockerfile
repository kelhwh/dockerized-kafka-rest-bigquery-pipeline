FROM confluentinc/cp-kafka-connect:5.0.0

RUN rm /etc/apt/sources.list \
 && echo 'deb http://deb.debian.org/debian jessie main\n\
deb http://security.debian.org/debian-security jessie/updates main\n\
deb http://deb.debian.org/debian jessie-updates main' > /etc/apt/sources.list

RUN cat /etc/apt/sources.list
RUN apt-get update \
 && apt-get install -y maven \
    git \
 && apt-get clean
